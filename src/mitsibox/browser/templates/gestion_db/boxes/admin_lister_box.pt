<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="fr"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="box">

<body>

<metal:main fill-slot="content-core"
            tal:define="labsView context/@@manageLabs;
                        boxesView context/@@manageBox;
                        roundsView context/@@manageRounds;
                        allBoxes boxesView/getListingAllBoxes">
<!--
<nav class="icone-toggle-listing-box">
    <a href=""
        tal:attributes="href string:${context/portal_url}/show-all-boxes">
        <i class="fas fa-th"></i>
    </a>
</nav>
-->
<h2>
    <i class="fas fa-ellipsis-v"></i>
    Liste des boites
</h2>
<nav class="menu-bouton">
    <a href=""
       tal:attributes="href string:${context/portal_url}/gestion-des-boites/ajouter-une-mitsibox"
       class="btn btn-primary"
       role="button">
        Ajouter une boite
    </a>
</nav>

<div class="flex-box flex-justify-content-center">
    <table id="listing-box-table"
           class="pat-datatables table table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Etat Porte</th>
                <th>Sms</th>
                <th>Prod</th>
                <th>Aduino</th>
                <th></th>
            </tr>
        </thead>
        <tal:boucle tal:repeat="myBox allBoxes">
            <tal:block tal:define="idLab myBox/lab_id;
                                   idBox myBox/_id;
                                   myLab python:labsView.getLabsById(idLab);
                                   myRound python:roundsView.getRoundsOfBox(idBox);
                                   index repeat/myBox/index">
                <tr>
                    <td class="text-center">
                        <a href=""
                           tal:attributes="href string:show-one-box?idBox=${myBox/_id}"
                           class="pat-plone-modal noborder"
                           data-pat-plone-modal="{}">
                            <span tal:content="myBox/name" class="orange" />
                            <sup>
                                &nbsp;&nbsp;<i class="fas fa-external-link-alt"></i>
                            </sup>
                        </a>
                        <hr />
                        <div clas="discreet">
                            <span tal:content="myBox/address" /><br />
                            <span tal:content="myBox/cp" />
                            <span tal:content="myBox/localite" /><br />

                            <i class="fad fa-globe"></i>
                            <span tal:content="myBox/lat" /> -
                            <span tal:content="myBox/long" /><br />
                        </div>
                        <hr />
                        <div class="discreet">
                            SSID Wifi :
                            <span tal:content="myBox/ssid" />
                        </div>
                        <hr />
                        <span tal:content="myLab/name" class="discret" />
                        <br />
                        <span tal:content="idBox" class="discret" />
                    </td>
                    <td>
                        <div>
                            <div id=""
                                 tal:attributes="id string:icone${index}-front-door">
                                 <!--imgjs-->
                            </div>

                            <span id=""
                                  class=""
                                  tal:attributes="id string:box${index}-door-status;
                                                  class python: myBox.door_status=='OPEN' and 'discret rouge' or 'discret vert'"
                                  tal:condition="exists: myBox/door_status"
                                  tal:content="myBox/door_status" />

                        </div>
                        <div>
                            <div id=""
                                 class=""
                                 tal:attributes="id string:icone${index}-top-door">
                                 <!--imgjs-->
                            </div>
                            <span tal:attributes="id string:box${index}-top-status;
                                                  class python: myBox.top_status=='OPEN' and 'discret rouge' or 'discret vert'"
                                  tal:condition="exists: myBox/top_status"
                                  tal:content="myBox/top_status" />
                        </div>
                    </td>

                    <td class="text-center">
                        <span tal:condition="exists: myBox/alertsms"
                              tal:attributes="class python: myBox.alertsms=='True' and 'vert' or 'rouge'">
                            <i class="fas fa-sms"></i>
                        </span>
                    </td>
                    <td>
                        <span tal:condition="exists: myBox/productionstate"
                              tal:attributes="class python: myBox.productionstate=='True' and 'vert' or 'rouge'">
                            <i class="fad fa-power-off"></i>
                        </span>
                    </td>
                    <td class="text-center">
                        <span tal:condition="exists: myBox/arduino">
                            <a href=""
                               tal:attributes="href string:show-one-box?idBox=${myBox/_id}"
                               class="pat-plone-modal noborder"
                               data-pat-plone-modal="{}">
                                <span tal:content="myBox/arduino" />
                            </a>
                        </span>
                    </td>
                    <td class="text-center">
                        <nav class="menu-bouton">
                            <a tal:attributes="href string:${context/portal_url}/gestion-des-boites/modifier-une-mitsibox?idBox=${myBox/_id}"
                               class="noborder"
                               alt="Modifier cette boite"
                               title="Modifier cette boite"
                               role="button">
                                <i class="bouton-nav fad fa-cogs"></i>
                            </a>
                        </nav>
                    </td>
                </tr>
            </tal:block>
        </tal:boucle>
    </table>
</div>
<script src=""
        tal:attributes="src string:$portal_url/++theme++mitsibox/js/get_boxes.js"></script>
</metal:main>
</body>
</html>


