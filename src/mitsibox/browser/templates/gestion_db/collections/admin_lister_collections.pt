<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="fr"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="box">

<body>

<metal:main fill-slot="content-core"
            tal:define="collectionsView context/@@manageCollections;
                        roundsView context/@@manageRounds;
                        boxesView context/@@manageBox;
                        driversView context/@@manageDrivers;
                        allCollections collectionsView/getAllCollections;">

<h2>
    <i class="fas fa-ellipsis-v"></i>
    Liste des collectes effectuées par les chauffeurs
</h2>
<span class="badge bg-warning text-dark">mitsibox_collect_history</span>
<table border="1" 
       class="listing">
        <thead>
            <tr>
                <th>Tournée</th>
                <th>Chauffeur</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>EndDate</th>
                <th>status</th>
                <th>labo_comment</th>
                <th>samples_total_labo</th>
            </tr>
        </thead>
        <tal:boucle tal:repeat="myCollection allCollections">
                <tr>
                    <td class="text-center">
                        <span tal:content="myCollection/round_id" />
                    </td>
                    <td class="text-center">
                        <span tal:content="myCollection/driver_id" />
                    </td>
                    <td class="text-center">
                        <span tal:content="myCollection/start_date" />
                    </td>
                    <td class="text-center">
                        <span tal:content="myCollection/end_date" />
                    </td>
                    <td class="text-center">
                        <span tal:content="myCollection/status" />
                    </td>
                    <td class="text-center">
                        <span tal:content="myCollection/employee_id" />
                    </td>
                    <td class="text-center">
                        <span tal:content="myCollection/labo_comment" />
                    </td>
                    <td class="text-center">
                        <span tal:content="myCollection/samples_total_labo" />
                    </td>
                </tr>
        </tal:boucle>
</table>
</metal:main>
</body>
</html>
